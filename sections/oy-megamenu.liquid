{%- style -%}
.section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
}

@media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    }
}
{%- endstyle -%}
<div class="twcss-w-full">
    <div class="twcss-container section-{{ section.id }}-padding">
        <nav class="twcss-bg-white twcss-border-gray-200 dark:twcss-bg-gray-900">
            <ul class="twcss-flex twcss-justify-center twcss-items-center twcss-gap-6">
                <li class="twcss-relative twcss-flex twcss-items-center">Home</li>
                <li class="twcss-relative twcss-flex twcss-items-center twcss-group">
                    Categories
                    <svg aria-hidden="true" class="twcss-w-5 twcss-h-5 twcss-ml-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                    <div class="twcss-absolute twcss-top-full twcss-left-1/2 -twcss-translate-x-1/2 twcss-grid twcss-grid-rows-[0fr] twcss-transition-[grid-template-rows] group-hover:twcss-grid-rows-[1fr] twcss-p-3">
                        <div class="twcss-min-w-min twcss-overflow-hidden twcss-shadow-lg twcss-bg-transparent twcss-rounded-xl">
                            <div class="twcss-flex twcss-flex-wrap twcss-min-w-max twcss-bg-white twcss-border twcss-border-gray-100 twcss-rounded-xl twcss-p-6">
                                <a class="twcss-w-1/2 twcss-px-1 twcss-py-3" href="">
                                    <p class="twcss-text-2xl twcss-max-w-sm">Category One</p>
                                </a>
                                <a class="twcss-w-1/2 twcss-px-1 twcss-py-3" href="">
                                    <p class="twcss-text-2xl twcss-max-w-sm">Category Two</p>
                                </a>
                                <a class="twcss-w-1/2 twcss-px-1 twcss-py-3" href="">
                                    <p class="twcss-text-2xl twcss-max-w-sm">Category Three</p>
                                </a>
                                <a class="twcss-w-1/2 twcss-px-1 twcss-py-3" href="">
                                    <p class="twcss-text-2xl twcss-max-w-sm">Category Four</p>
                                </a>
                            </div>
                        </div>
                    </div>
                </li>
                <li class="twcss-relative twcss-flex twcss-items-center">Brands</li>
                <li class="twcss-relative twcss-flex twcss-items-center">Onsale</li>
            </ul>
        </nav>
    </div>
</div>

{% schema %}
{
    "name": "OY Mega menu",
    "tag": "section",
    "class": "section",
    "disabled_on": {
    "groups": ["header", "footer"]
    },
    "settings": [{
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "FAQs"
        }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
    }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
    }
    ],
    "blocks": [{
    "type": "menu-item",
    "name": "Menu Item",
    "settings": [
        {
            "type": "text",
            "id": "first-lv-label",
            "label": "First Level Label"
        }, {
            "type": "url",
            "id": "first-lv-url",
            "label": "First Level Url"
        }, {
            "type": "collection_list",
            "id": "collection-list",
            "label": "Second Level Collections"
        }
    ]
    }],
    "presets": [
    {
        "name": "OY Mega menu"
    }
    ]
}
{% endschema %}