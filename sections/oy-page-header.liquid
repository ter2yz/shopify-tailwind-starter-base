{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div
  class="twcss-w-full"
  style="background-color: {{ section.settings.bg_color }}">
  <div
    class="twcss-w-full section-{{ section.id }}-padding">
    <div
      class="twcss-container">
      <div
        class="twcss-w-full twcss-flex twcss-flex-col twcss-items-center">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'caption' -%}
            <p
              class="twcss-uppercase twcss-text-2xl twcss-mb-6 twcss-font-semibold">{{ block.settings.caption }}</p>
            {%- when 'icon' -%}
            <div
              class="twcss-max-w-[70px] twcss-mb-6">
              {{ block.settings.image_icon | image_url: width: 140 | image_tag }}
            </div>
            {%- when 'heading' -%}
            <h3
              class="twcss-max-w-6xl twcss-text-center twcss-font-young-serif twcss-font-bold twcss-text-7xl twcss-leading-snug twcss-mb-9">{{ block.settings.heading }}</h3>
            {%- when 'description' -%}
            <p
              class="twcss-text-center">{{ block.settings.description }}</p>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
  <div
    class="twcss-w-full">
    <img
      class="twcss-w-full"
      src="{{ 'waves-bottom.svg' | asset_url }}"
      alt=""
      loading="lazy">
  </div>
</div>

{% schema %}
  {
    "name": "OY Page header",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }, {
        "type": "color",
        "id": "bg_color",
        "default": "#f8fbf3",
        "label": "Background Color"
      }
    ],
    "blocks": [
      {
        "type": "caption",
        "name": "caption",
        "settings": [
          {
            "type": "text",
            "id": "caption",
            "label": "Caption"
          }
        ]
      }, {
        "type": "heading",
        "name": "heading",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          }
        ]
      }, {
        "type": "icon",
        "name": "icon",
        "settings": [
          {
            "type": "image_picker",
            "id": "image_icon",
            "label": "Icon"
          }
        ]
      }, {
        "type": "description",
        "name": "description",
        "settings": [
          {
            "type": "inline_richtext",
            "id": "description",
            "label": "Description"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "OY Page header"
      }
    ]
  }
{% endschema %}