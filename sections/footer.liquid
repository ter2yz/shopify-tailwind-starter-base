      <a href="/" class=""><span class="twcss-font-young-serif twcss-text-6xl twcss-leading-snug twcss-text-white">Oyaykids</span></a>
    </div>
    <div class="footer-block--newsletter twcss-flex-none twcss-mr-0 twcss-mb-12 lg:twcss-mb-0 lg:twcss-mr-20" style="align-items: start;">
      {%- if section.settings.newsletter_enable -%}
        <div class="footer-block__newsletter">
          {%- if section.settings.newsletter_heading != blank -%}
            <p class="twcss-uppercase twcss-text-2xl twcss-mb-6 twcss-font-semibold twcss-text-center lg:twcss-text-left twcss-text-white">{{ section.settings.newsletter_heading }}</p>
          {%- endif -%}
          {%- form 'customer', id: 'ContactFooter', class: 'footer__newsletter newsletter-form oy-form', style: 'margin: 0;' -%}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <div class="newsletter-form__field-wrapper">
              <div class="field">
                <input
                  id="NewsletterForm--{{ section.id }}"
                  type="email"
                  name="contact[email]"
                  style="min-width: 300px; border-radius: 1rem; background-color: transparent; color: #fff; border: 1px solid #ffffff; padding: 2.75rem 2.25rem;"
                  class="field__input twcss-w-[36rem] twcss-rounded-lg"
                  value="{{ form.email }}"
                  aria-required="true"
                  autocorrect="off"
                  autocapitalize="off"
                  autocomplete="email"
                  {% if form.errors %}
                    autofocus
                    aria-invalid="true"
                    aria-describedby="ContactFooter-error"
                  {% elsif form.posted_successfully? %}
                    aria-describedby="ContactFooter-success"
                  {% endif %}
                  placeholder="{{ 'newsletter.label' | t }}"
                  required
                >
                <label class="field__label" for="NewsletterForm--{{ section.id }}" style="color: #ffffff;top:50%;transform:translateY(-50%)">
                  {{ 'newsletter.label' | t }}
                </label>
                <button type="submit" class="newsletter-form__button field__button" style="color: #ffffff;" name="commit" id="Subscribe" aria-label="{{ 'newsletter.button_label' | t }}">
                  {% render 'icon-arrow' %}
                </button>
              </div>
              {%- if form.errors -%}
                <small class="newsletter-form__message form__message" id="ContactFooter-error">{% render 'icon-error' %}{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}</small>
              {%- endif -%}
            </div>
            {%- if form.posted_successfully? -%}
              <h3 class="newsletter-form__message newsletter-form__message--success form__message" id="ContactFooter-success" tabindex="-1" autofocus>{% render 'icon-success' %}{{ 'newsletter.success' | t }}</h3>
            {%- endif -%}
          {%- endform -%}
          <p class="twcss-text-2xl twcss-text-center lg:twcss-text-left twcss-text-white twcss-mt-6">We’ll never share your email address with third parties.</p>
        </div>
      {%- endif -%}

