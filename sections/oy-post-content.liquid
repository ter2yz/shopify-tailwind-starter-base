{%- style -%}
    .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
        padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
    
    @media screen and (min-width: 750px) {
        .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
        }
    }
{%- endstyle -%}
<div class="twcss-w-full">
    <div class="twcss-container section-{{ section.id }}-padding">
        <article
          class="twcss-prose twcss-max-w-7xl twcss-mx-auto prose-headings:twcss-font-young-serif prose-img:twcss-w-full prose-img:twcss-max-w-3xl prose-img:twcss-px-6 prose-img:twcss-mx-auto prose-p:twcss-leading-snug prose-a:twcss-leading-snug prose-li:twcss-leading-snug prose-li:twcss-text-[36px]/tight prose-ol:twcss-text-sky-primary prose-ol:twcss-list-image-[url(data:image/svg+xml;base64,)]"
          itemprop="articleBody">
          {{ section.settings.paragraph }}
        </article>
    </div>
</div>

{% schema %}
  {
    "name": "OY Post content",
    "disabled_on": {
      "groups": ["header", "footer"]
    },
    "settings": [
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }, {
        "type": "richtext",
        "id": "paragraph",
        "label": "Paragraph"
      }
    ],
    "presets": [
      {
        "name": "OY Post content"
      }
    ]
  }
{% endschema %}