<div class="twcss-w-full twcss-py-40 twcss-bg-sky-primary">
  <div class="twcss-container">
      <div class="">
        <p class="twcss-text-white">{{ section.settings.caption }}</p>
        <p class="twcss-text-white">{{ section.settings.heading }}</p>
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'brand' -%}
            <h2 class="twcss-text-white">
              {{ block.settings.image_link }}
            </h2>
          {%- endcase -%}
        {%- endfor -%}
      </div>
  </div>
</div>

{% schema %}
{
  "name": "OY Image icon text",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "caption",
      "label": "Caption"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "brand",
      "name": "Brand",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_with_text_image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "image_link",
          "label": "t:sections.rich-text.blocks.buttons.settings.button_link_1.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "OY Image icon text",
      "blocks": [
        {
          "type": "brand"
        }
      ]
    }
  ]
}

{% endschema %}